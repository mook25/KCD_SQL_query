/* 페이스북 여신인증자 업데이트 조회 _ 매주 월요일 업데이트*/
select p.number, b.crefia_owner_birthday, b.crefia_owner_birthday, b.created_at from  businesses b join phones p on p.user_id = b.owner_id
where (b.crefia_name is not null ) 
and b.created_at between '2018-11-15' and '2018-11-26'
order by b.created_at desc;

/* 데일리_여신인증자 조회 */ 
SELECT
	ktc :: DATE AS DATE,
	COUNT ( DISTINCT business_id ) 
FROM
	( SELECT *, sent_at + INTERVAL '9 hours' AS ktc FROM cashnote.credential_added WHERE TYPE = 'crefia' AND sent_at >= '2018-04-01' ) 
GROUP BY
DATE 
ORDER BY
	DATE DESC;
